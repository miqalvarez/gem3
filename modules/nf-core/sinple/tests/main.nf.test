// nf-core modules test sinple
nextflow_process {

    name "Test Process SINPLE"
    script "../main.nf"
    process "SINPLE"

    tag "modules"
    tag "modules_nfcore"
    tag "sinple"

    test("sarscov2 - bam") {

        when {
            process {
                """
                // Define the inputs for the process
                input[0] = [
                    [ id:'test-sample', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                ]

                input[1] = '0.001' // Sensitivity (theta parameter)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sarscov2 - bam - stub") {

        options "-stub"

        when {
            process {
                """
                // Define the inputs for the stub process
                input[0] = [
                    [ id:'test-sample', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true),
                ]

                input[1] = '0.001' // Sensitivity (theta parameter)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}